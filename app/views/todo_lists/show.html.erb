<h2 class="todo_list_title"><%= @todo_list.title %></h2>
<% if @todo_list.description? %>
  <p class="todo_list_sub_title"><%= @todo_list.description %></p>
<% end %>

<div id="todo_items_wrapper">
  <%= render @todo_list.items %>
  <div id="form">
    <%= render "items/form" %>
  </div>
</div>

<div class="links">
  <%= link_to 'Edit', edit_user_todo_list_path(current_user, @todo_list) %> |
  <%= link_to 'Delete', user_todo_list_path(current_user, @todo_list), method: :delete, data: { confirm: "Are you sure?"} %> |
  <%= link_to 'Back', root_path %>
</div>
